---
import { usePageData } from '@astrojs/starlight/client';
const { title } = usePageData();
---

<html lang="en">
  <head>
    <slot name="head" />
  </head>
  <body>
    <!-- ✅ Top nav bar -->
    <header class="top-nav">
      <div class="nav-title"><a href="/">DS Garden</a></div>
      <nav class="nav-links">
        <a href="/datascience-home/">Home</a>
        <a href="/ml/">ML</a>
        <a href="/ai/">AI</a>
        <a href="/glossary/">Glossary</a>
        <a href="/ab-testing/">A/B Testing</a>
        <a href="/ontology-primer/">Ontology</a>
      </nav>
    </header>

    <!-- ✅ Page content slot -->
    <div class="page-wrapper">
      <slot />
    </div>
  </body>
</html>

<style>
body {
  margin: 0;
  font-family: var(--sl-font-body);
  background: var(--sl-color-bg);
  color: var(--sl-color-text);
}

.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 2rem;
  background-color: var(--sl-color-bg);
  border-bottom: 1px solid var(--sl-color-hairline);
  position: sticky;
  top: 0;
  z-index: 1000;
}

.nav-title a {
  text-decoration: none;
  font-size: 1.25rem;
  font-weight: bold;
  color: var(--sl-color-text);
}

.nav-links {
  display: flex;
  gap: 1.25rem;
}

.nav-links a {
  text-decoration: none;
  color: var(--sl-color-text);
  font-weight: 500;
}

.nav-links a:hover {
  text-decoration: underline;
}

.page-wrapper {
  padding: 2rem;
  max-width: 100ch;
  margin: 0 auto;
}
</style>
